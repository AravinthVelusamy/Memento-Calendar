<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="wrap_content"
  android:foreground="?android:attr/selectableItemBackground">

  <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="10dp"
    android:layout_marginLeft="@dimen/widget_upcoming_vertical_padding"
    android:layout_marginRight="@dimen/widget_upcoming_vertical_padding"
    android:layout_marginTop="10dp"
    android:orientation="vertical">

    <TextView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="@string/namedays"
      android:textColor="@color/nameday_blue"
      android:textSize="14sp" />

    <TextView
      android:id="@+id/row_upcoming_namedays"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginTop="8sp"
      android:ellipsize="end"
      android:maxLines="2"
      android:textSize="14sp"
      tools:text="Πέτρος, Μάκης, Δήμητρα, Μαρία και πόοοοοοσι ακόμα, πωπω, πόσα ονόματα γιορτάζουν πια σε αυτή την ημέρα είναι τρελό" />

  </LinearLayout>

</FrameLayout>
